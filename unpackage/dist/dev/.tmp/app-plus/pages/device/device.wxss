.banner {
  height: 550rpx;
  width: 100%;
  background: #19a4af;
  position: relative;
}
.banner .banner-center {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
    z-index: 2;
}
.banner .circle {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -100rpx;
    margin-top: -100rpx;
    -webkit-border-radius: 50%;
            border-radius: 50%;
    z-index: 1;
}
.banner .circle-one {
    background-color: #4ab7c0;
    -webkit-animation: click1 2s linear infinite;
            animation: click1 2s linear infinite;
}
.banner .circle-two {
    background-color: #36afb9;
    -webkit-animation: click2 2s linear infinite;
            animation: click2 2s linear infinite;
}
@-webkit-keyframes click1 {
0% {
    opacity: .8;
    -webkit-transform: scale(1);
    transform: scale(1);
}
100% {
    opacity: 0;
    -webkit-transform: scale(2);
    transform: scale(2);
}
}
@keyframes click1 {
0% {
    opacity: .8;
