<view class="device-list"><block wx:for="{{deviceList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="device-list-item flex-center"><image class="device-list-item-img" src="{{item.img}}" mode></image><view class="device-list-item-right"><view class="device-list-item-right-item"><view class="device-list-item-right-item-tit uni-h5 text-overflow-one">{{''+item.tit+''}}</view></view><view class="device-list-item-right-item"><text class="device-list-item-right-item-info">{{"型号:"+item.type}}</text></view><view class="device-list-item-right-item"><text class="device-list-item-right-item-info">租赁费：</text><text class="color-important">{{"¥"+item.price}}</text></view><view class="device-list-item-right-item flex-center"><image class="device-list-item-right-item-img" src="../../static/images/device-time.png" mode="aspectFill"></image><text class="device-list-item-right-item-info">{{item.daterange}}</text></view><view class="device-list-item-right-item flex-center"><image class="device-list-item-right-item-img" src="../../static/images/device-location.png" mode="aspectFill"></image><text class="device-list-item-right-item-info">{{item.address}}</text></view><button class="operate-device-btn">操作设备</button></view></view></block></view>