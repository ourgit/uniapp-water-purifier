page {
  height: 100%;
  line-height: 1.8;
  background: #f2f2f2;
  font-size: 30rpx;
  color: #333;
}
/* 大按钮 */
.submit-btn {
  margin: 50rpx 0;
}
.submit-btn button {
    height: 95rpx;
    line-height: 95rpx;
    font-size: 34rpx;
    color: #fff;
    background: #00b5c4;
    -webkit-border-radius: 12rpx;
            border-radius: 12rpx;
}
/* 标题 */
.uni-h1 {
  font-size: 80rpx;
  font-weight: bold;
}
.uni-h2 {
  font-size: 60rpx;
  font-weight: bold;
}
.uni-h3 {
  font-size: 50rpx;
  font-weight: bold;
}
.uni-h4 {
  font-size: 40rpx;
  font-weight: bold;
}
.uni-h5 {
  font-size: 30rpx;
  font-weight: bold;
}
/* 无数据 */
.no-data {
  text-align: center;
  line-height: 120rpx;
  color: #999;
}
/* 强调色 */
.color-important {
  color: #f74c45;
}
/* 溢出隐藏 */
.text-overflow-three,
.text-overflow-one,
.text-overflow-two {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.text-overflow-one {
  -webkit-line-clamp: 1;
}
.text-overflow-two {
  -webkit-line-clamp: 2;
}
.text-overflow-three {
  -webkit-line-clamp: 3;
}
